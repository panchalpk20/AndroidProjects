<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/mainl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="#ff5100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="126dp">

        <com.example.root.draw.DrawPadView
            android:id="@+id/drawPadView1"
            android:layout_width="match_parent"
            android:layout_height="426dp"
            android:background="#fff" />


        <android.support.v4.widget.Space
            android:id="@+id/currentC"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/controlls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="#ff0000"
                        android:onClick="setC"
                        android:tag="#ff0000" />

                    <Button
                        android:tag="#00ff00"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="setC"
                        android:background="#00ff00"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:tag="#000099"
                        android:background="#000099"
                        android:onClick="setC"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:tag="#fffb00"
                        android:background="#fffb00"
                        android:onClick="setC"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:tag="#f700ff"
                        android:background="#f700ff"
                        android:onClick="setC"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:tag="#469990"
                        android:background="#469990"
                        android:onClick="setC"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#ff6a00"
                        android:background="#ff6a00"
                        android:onClick="setC"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#00a2ff"
                        android:background="#00a2ff"
                        android:onClick="setC"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#9d00ff"
                        android:background="#9d00ff"
                        android:onClick="setC"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#ff0095"
                        android:background="#ff0095"
                        android:onClick="setC"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#000000"
                        android:background="#000000"
                        android:onClick="setC"/>

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:tag="#737373"
                        android:background="@drawable/combine"
                        android:onClick="colorPeek"/>




                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:max="100"
                android:progress="2"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:tag="#ffffff"
                    android:background="@drawable/eraser"
                    android:onClick="setC"/>

                <android.support.v4.widget.Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:tag="pencil"
                    android:background="@drawable/pencil"
                    android:onClick="setC"/>

                <android.support.v4.widget.Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:tag="pencil"
                    android:background="@drawable/save"
                    android:onClick="save"/>

                <android.support.v4.widget.Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:tag="pencil"
                    android:background="@drawable/newico"
                    android:onClick="reset"/>



            </LinearLayout>





        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>